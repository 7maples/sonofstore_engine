.large-12.columns
  .row
    .large-12.columns

    .large-12.columns
      .row.admin-panel.login-wrapper
        %h1.admin-heading Login
        = form_tag customer_sessions_path(store:params[:store]), method: :post do
          .field
            = label_tag :email
            = text_field_tag :email
            %br/
          .field
            = label_tag :password
            = password_field_tag :password
            %br/
          .actions
            = submit_tag "Login", class: "button"

        %h6= link_to 'New customer? Create a new account here.', new_customers_path
