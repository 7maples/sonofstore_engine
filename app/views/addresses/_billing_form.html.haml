- form_method = @billing_address.new_record? ? "POST" : "PUT"
= form_for @billing_address, method: form_method do |f|
  - if @billing_address.errors.any?
    #error_explanation
      %h2= "#{pluralize(@billing_address.errors.count, "error")} prohibited this billing_address from being saved:"
      %ul
        - @billing_address.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.hidden_field :customer_id, value: session[:user_id]
  .field
    = f.hidden_field :status, value: 1
  .field
    = f.label :street
    = f.text_field :street
  .field
    = f.label :city
    = f.text_field :city
  .field
    = f.label :state
    = f.text_field :state
  .field
    = f.label :zipcode
    = f.text_field :zipcode
  .field
    = f.label :phone
    = f.text_field :phone
  .actions
    = f.submit 'Save', class:"button"
