%head
  %meta{ :charset => "utf-8" }

  -# Uncomment to make IE8 render like IE7
  -# meta http-equiv="X-UA-Compatible" content="IE=7"

  -# Set the viewport width to device width for mobile
  %meta{ :name => "viewport", :content => "width=device-width, initial-scale=1.0" }

  %title= content_for?(:title) ? yield(:title) : "Untitled"

  = stylesheet_link_tag "application"
  <link href='http://fonts.googleapis.com/css?family=Questrial' rel='stylesheet' type='text/css'>
  = csrf_meta_tag

.row
  .large-12.columns
    / Navigation
    .row
      .large-12.columns
        .fixed
          %nav.top-bar
            %ul.title-area
              / Title Area
              %li.name
                %h1
                  %a{:href => "/"} OBIWEAR
              %li.toggle-topbar.menu-icon
                %a{:href => "#"}
                  %span menu
            %section.top-bar-section
              / Right Nav Section
              %ul.right
                %li
                  %a{:href => products_path } Products</i>
                %li.has-dropdown
                  %a{:href => categories_path} Categories <i class="icon-angle-down"></i>
                  %ul.dropdown
                    - category_list.each do |category|
                      %li= link_to category.name, category_path(category)
                    %li= link_to "See all →", categories_path
                - if @cart != nil
                  %li.has-dropdown
                    %a{:href => cart_path(@cart)} Cart <i class="icon-angle-down"></i>
                - if logged_in?
                  %li.has-dropdown
                    %a{:href => customer_path(current_user) } <i class="icon-user"></i> #{current_user.username} <i class="icon-angle-down"></i>
                    %ul.dropdown
                      %li
                        %a{:href => customer_path(current_user) } Account
                      %li
                        %a{:href => "/orders"} Orders
                      %li.divider
                      %li
                        %a{:href => logout_path } Logout
                - else
                  %li.has-dropdown
                    %a{:href => "/login" } Login / Signup <i class="icon-angle-down"></i>
                    %ul.dropdown
                      %li
                        %a{:href => login_path } Login
                      %li
                        %a{:href => new_customer_path } Signup
          / End Top Bar
      / End Navigation

  = yield

