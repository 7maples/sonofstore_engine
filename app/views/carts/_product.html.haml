- @products.each do |product|
  .row
    .large-2.columns.small-3
      =image_tag product.image.url(:thumb)
    .large-10.columns
      .left
        %h2= link_to product.name, product_path(product)
        %p= product.description
        - product_quantity = CartProduct.find_by_product_id(product.id).quantity
        %p= product_quantity
        %p= @cart.cart_products.find{ |cart_product| cart_product.product_id == product.id }.quantity
        %p= product.active
        /%a= link_to Category.find(product.category_id), categories_path
      .right
        %h2= "#{number_to_currency(product.price)}"
        =link_to 'Edit', edit_admin_product_path(product), class: "button right"
    