- @products.each do |product|
  .row
    .large-2.columns.small-3
      =image_tag product.image.url(:thumb)
    .large-10.columns
      .left
        %h2= link_to product.name, product_path(product)
        %p= product.description
        - cart_product = @cart.cart_products.find_by_product_id(product.id)
        %h5.left= link_to "Remove Product", cart_product_path(cart_product.id), method: :delete, class: "button small round"
      .right
        %h4.right Unit Price
        %h2= "#{number_to_currency(product.price)}"