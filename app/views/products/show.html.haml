.row
  .large-12.columns
    / Navigation
    %ul.button-group
      %li
        %a.button{:href => "#"} Nav Item 1
      %li
        %a.button{:href => "#"} Nav Item 2
      %li
        %a.button{:href => "#"} Nav Item 3
    / End Navigation
    / Header Content
    .row
      .large-6.columns
        =image_tag @product.image.url
      .large-6.columns
        %h3.show-for-small Header    
        %h2.hide-for-small.left= @product.name
        %h2.hide-for-small.right= "Price - #{number_to_currency(@product.price)}"
        %hr/
        %h5.subheader= @products
        %h4 Description
        %p= @product.description
        %hr/  
        .row
          .large-12.small-6.columns
            %h4 Shop
            %h5.subheader Sizes
            %select.options
              %option{:value => "small"} small
              %option{:value => "medium"} medium
              %option{:value => "large"} large
            %h6.subheader
            = link_to 'Add to Cart', cart_path(@cart, product: @product.id), method: :put, class: 'button'
            %a.button{:href => "#"} Checkout
    / End Footer

