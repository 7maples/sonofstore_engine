= form_for [:store_admin,@category], method: 'POST', url: "/#{@store.path}/admin/categories/#{@category.id}/edit" do |f|

  %p
    = f.label :name
    %br/
    = f.text_field :name

  - if @category.errors.any?
    #error_explanation
      %h2= "#{pluralize(@category.errors.count, "error")} prohibited this store_admin_category from being saved:"
      %ul
        - @category.errors.full_messages.each do |msg|
          %li= msg

  .actions
    = f.submit 'Save'
