= form_for @product, url: admin_products_path, html: {method: :post} do |f|
  - if @product.errors.any?
    #error_explanation
      %h2
        = pluralize(@product.errors.count, "error")
        prohibited this product from being saved:
      %ul
        - @product.errors.full_messages.each do |msg|
          %li= msg
  .actions
    = form_for(@product, html: {multipart: true}) do |f|
      %ul
        - @product.errors.full_messages.each do |error|
          %li= error
      %p
        = f.label :name
        %br/
        = f.text_field :name
      %p
        = f.label :description
        %br/
        = f.text_area :description
      %p
        = f.label :price
        %br/
        = f.number_field :price, min: 0
      %p
        = f.label :quantity
        %br/
        = f.number_field :quantity, min: 0
      %p
        = f.label :category
        %br/
        - category_names = category_list.collect do |category| 
          - category.name
        - category_values = category_list.collect do |category|
          - category.id
 /************ Still need to pass the id to the products info
        = select_tag 'category', options_for_select(category_names, category_values), multiple: true, size: 4
      %p
        = f.label :featured
        = f.label :featured, "True"
        = f.radio_button :featured, true
        = f.label :featured, "False"
        = f.radio_button :featured, false
      %p
        = f.submit
      / %p
      /   - if @product.image.exists?
      /     = image_tag @product.image.url
      /     %br/
      /   = f.label :image, "Attach a New Image"
      /   %br/
      /   = f.file_field :image