%h1 Listing orders

%table
  %tr
    %th Customer
    %th Status
    %th Total
    %th Created at
    %th
    %th
    %th

  - @orders.each do |order|
    %tr
      %td= order.customer.username
      %td= order.status
      %td= number_to_currency(order.total)
      %td= order.created_at
      %td= link_to 'Show', admin_order_path(order), class: "button tiny round"
      %td= link_to 'Edit', edit_admin_order_path(order), class: "button tiny round"
      %td= link_to 'Delete', admin_order_path(order), method: :delete, class: "button tiny round", data: { confirm: 'Are you sure?' }  

%br

= link_to 'New Order', new_admin_order_path, class: "button"
