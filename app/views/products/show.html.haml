.row.content
  .large-12.columns
    %ul.button-group
      %li
    .row
      .large-6.columns
        =image_tag @product.image.url 
      .large-6.columns
        %h3.show-for-small Header    
        %h2.hide-for-small.left= @product.name
        %h2.hide-for-small.right= "Price - #{number_to_currency(@product.price)}"
        %hr/
        %h5.subheader= @products
        %h4 Description
        %p= @product.description
        %hr/  
        .row
          .large-12.small-6.columns
            = form_tag(cart_path, method: :put) do
              = hidden_field_tag 'product', @product.id
              = number_field_tag 'quantity', 1
              - if @product.active == false
                %h4 Product Retired
              - else
                = submit_tag 'Add to Cart', class: 'button'
              %a.tiny.round{:href => products_path} Back to Products

