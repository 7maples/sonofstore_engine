%head
  %meta{ :charset => "utf-8" }

  -# Uncomment to make IE8 render like IE7
  -# meta http-equiv="X-UA-Compatible" content="IE=7"

  -# Set the viewport width to device width for mobile
  %meta{ :name => "viewport", :content => "width=device-width, initial-scale=1.0" }

  %title= content_for?(:title) ? yield(:title) : "#{current_store.name}"


  = stylesheet_link_tag "application"
  <link href='http://fonts.googleapis.com/css?family=Questrial' rel='stylesheet' type='text/css'>
  = javascript_include_tag "vendor/custom.modernizr"
  = csrf_meta_tag

%body

.row
  .large-12.columns
    / Navigation
    .row
      .large-12.columns
        .fixed
          %nav.top-bar
            %ul.title-area
              / Title Area
              %li.name
                %h1
                  = link_to current_store.name, store_admin_path
              %li.toggle-topbar.menu-icon
                %a{:href => "#"}
                  %span menu
            %section.top-bar-section
              / Right Nav Section
              %ul.right
                %li
                  %a{:href => "/admin/categories"} Categories
                %li 
                  %a{:href => "/admin/customers"} Customers
                %li 
                  %a{:href => "/admin/products"} Products
                %li
                  %a{:href => "/admin/orders"} Orders
                %li
                  %a{:href => "/"} Logout
                  %ul.dropdown
                    %li.divider
                    %li
                      %a{:href => "#"} See all →
          / End Top Bar
      / End Navigation
  = render partial: "layouts/messages"
  = yield

  %footer.row
    .large-12.columns
      %hr/
      .row
        .large-6.columns
          %p © Copyright | Logan | Jenn | Chris | Blair

  = javascript_include_tag "application"

