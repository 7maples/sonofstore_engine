- @products.each do |product|
  .row
    .large-2.columns.small-3
      =image_tag product.image.url(:thumb)
    .large-10.columns
      .left
        %h2= link_to product.name, product_path(product)
        %p= product.description
        %p= @cart.cart_products.find{ |cart_product| cart_product.product_id == product.id }.quantity
        
        /%a= link_to Category.find(product.category_id), categories_path
      .right
        %h2= "#{number_to_currency(product.price)}"
        =link_to 'Update', "#" ,class: "button right"

    