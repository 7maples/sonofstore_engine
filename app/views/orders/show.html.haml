- if notice
  .large-12.columns
    %p#notice= notice

%table
  %tr
    %th Customer
    %th Status
    %th Order Date & Time
    %th Customer Email
    %th Status
    %th Order Products
    %tr
      %td= @order.customer.username
      %td= "$#{@order.total.to_i}"
      %td= @order.created_at
      %td= @order.customer.email
      %td= @order.status
      - @products.each do |product|
        %td= product.name

= link_to 'Back', orders_path


   
