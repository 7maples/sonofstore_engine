= form_for [ :admin, @category ] do |f|
  %ul
    - @category.errors.full_messages.each do |error|
      %li= error
  %p
    = f.label :name
    %br/
    = f.text_field :name
  %p
    = f.label :description
    %br/
    = f.text_area :description
  %p
    = f.submit
  / %p
  /   - if @category.image.exists?
  /     = image_tag @category.image.url
  /     %br/
  /   = f.label :image, "Attach a New Image"
  /   %br/
  /   = f.file_field :image