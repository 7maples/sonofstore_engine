.row
  .large-2.columns.small-3
    =image_tag product.image.url(:thumb)
  .large-10.columns
    .left
      %h2= product.name
      %p= product.description
      /%a= link_to Category.find(product.category_id), categories_path
    .right
      %h2= "$ #{product.price}"
      %a.button.right{:href => "/admin/products/#{product.id}/edit" } Edit
      %a.button.right{:href => "/admin/products/#{product.id}/edit", :method => :put } Retire

