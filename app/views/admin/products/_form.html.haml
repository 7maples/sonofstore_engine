= form_for [ :admin, @product ] do |f|
  %ul
    - @product.errors.full_messages.each do |error|
      %li= error
  %p
    = f.label :name
    %br/
    = f.text_field :name
  %p
    = f.label :description
    %br/
    = f.text_area :description
  %p
    = f.label :price
    %br/
    = f.number_field :price, min: 0
  %p
    = f.label :quantity
    %br/
    = f.number_field :quantity, min: 0
  %p
    = f.label :category
    %br/
    = f.fields_for :product_categories do |c|
      = c.select :category_id, options_for_select(category_options(category_list)), multiple: true, size: 4
  %p
    = f.label :image
    %br/
    = f.file_field :image
  %p
    = f.label :featured
    = f.label :featured, "True"
    = f.radio_button :featured, true
    = f.label :featured, "False"
    = f.radio_button :featured, false
  %p
    = f.label 'status'
    = f.label :active, "Active"
    = f.radio_button :active, true
    = f.label :active, "Retired"
    = f.radio_button :active, false
  %p
    = f.submit
  / %p
  /   - if @product.image.exists?
  /     = image_tag @product.image.url
  /     %br/
  /   = f.label :image, "Attach a New Image"
  /   %br/
  /   = f.file_field :image