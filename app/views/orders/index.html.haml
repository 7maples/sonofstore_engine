%h1= "Listing #{@orders.count} Orders"

%table
  %tr
    %th Customer
    %th ~Click Status to filter~
    %th Total
    %th Order Date & Time
    %th
    %th
    %th
  - @orders.each do |order|
    %tr
      %td= order.customer.username
      %td= link_to order.status, orders_path(status: order.status) 
      %td= number_to_currency(order.total)
      %td= order.created_at
      %td= link_to 'Show', order_path(order), class: "button tiny round"
  
