.large-12.columns
  .row
    .large-12.columns
      = link_to 'New Order', new_admin_order_path, class: "button right"
      %h1.admin-heading= "Listing #{@orders.count} Orders"

.large-12.columns
  .row.admin-panel
    .large-12.columns
      %table
        %tr
          %th Customer
          %th ~Click Status to filter~
          %th Total
          %th Order Date & Time
          %th
          %th
        - @orders.each do |order|
          %tr
            %td= order.customer.username
            %td= link_to order.status, admin_orders_path(status: order.status) 
            %td= number_to_currency(order.total)
            %td= order.created_at
            %td= link_to 'Show', admin_order_path(order), class: "button small"
            %td= link_to 'Edit', edit_admin_order_path(order), class: "button small"
  
